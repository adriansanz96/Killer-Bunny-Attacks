<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertar_pregunta"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#f8ffeb"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boton_naranja_01"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertar_preg_correcta"
        android:id="@+id/textView12"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#f8ffeb"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/editText5"
        android:background="@drawable/boton_naranja_01"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertar_preg_incorrecta"
        android:id="@+id/textView13"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#f8ffeb"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/editText6"
        android:background="@drawable/boton_naranja_01"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/crear"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_selector_rojo"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/cancelar"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_selector_rojo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

</LinearLayout>