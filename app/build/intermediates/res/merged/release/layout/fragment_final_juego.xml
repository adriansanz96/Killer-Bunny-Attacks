<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    tools:context="com.example.adrin.juegoproyecto.JuegoActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:id="@+id/relativelayoutresult"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView37"
            android:layout_alignStart="@+id/textView5"
            android:src="@drawable/boton_naranja_01_puls" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="New Text"
                android:id="@+id/textView5"
                android:layout_x="9dp"
                android:layout_y="10dp"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUNTOS"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/texto_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:id="@+id/imageView4"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/imageView37" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:src="@drawable/corona"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/imageView37" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageView"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:id="@+id/texto_result"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:background="#a6191313"
            android:gravity="center"
            android:text="PUNTUACIONES"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
