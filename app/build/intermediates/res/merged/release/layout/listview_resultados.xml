<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/listviewresultados"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:background="@drawable/boton_naranja_01"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:id="@+id/imageButton7"
        android:background="@drawable/list_selector_rojo"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="@string/volver"
        android:textColor="#ffffff" />"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:id="@+id/imageButton6"
        android:background="@drawable/list_selector_rojo"
        android:layout_below="@+id/listviewresultados"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="@string/limpiar_todo"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/imageView8"
        android:background="@drawable/boton_naranja_01"
        android:layout_alignStart="@+id/listviewresultados"
        android:layout_alignEnd="@+id/listviewresultados" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:text="@string/resultados_titulo"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>